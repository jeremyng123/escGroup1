doctype html
html(lang='en')
  include ../common/header.pug
  +header("Registration Page")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row
          .col-sm-12.offset-md-2.col-md-8
            .jumbotron
              h2.text-center Sign up!
              .row
                .col-sm-12.col-md-12.col-xs-12
                  form(action='/users/signup', method='POST')
                    div.formgroup
                      label.small.mb-1.mt-3 Email: 
                      input(placeholder='Please enter your email',required=true, name='email',type='email',value='').form-control
                      label.small.mb-1.mt-3 First Name: 
                      input(placeholder='Please enter first name',required=true, name='firstName',type='text',value='').form-control
                      label.small.mb-1.mt-3 Last Name: 
                      input(placeholder='Please enter last name',required=true, name='lastName',type='text',value='').form-control
                      label.small.mb-1.mt-3 Password: 
                      input(placeholder='New Password',required=true, name='password', type='password',value='').form-control
                      button.mt-3.btn.btn-primary(type='submit') Sign up
                      p.mt-2.mb-0 
                        | Already have an account? #[a(href="/login") Log in here].
          
    include ../common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")