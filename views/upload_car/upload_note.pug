doctype html
html(lang='en')
  include ../common/header.pug
  +header(title)
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-8.order-md-1.text-center.text-md-left.pr-md-5
            h1.display-7.m-b-2 Upload Images For Notification

            // register form
            form(action='/uploadCarousel',method='POST' )
              div.form-group
                label(for='content') Description:
                textarea#content.form-control(name='content', placeholder="upload new notification for all users to see")
                
              button.btn.btn-outline-dark(type='submit') Submit
    include footer.pug
    +footer()


