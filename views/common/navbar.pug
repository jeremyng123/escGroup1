mixin navbar(user)
  - let hostDomain = "localhost:3000";
  
    nav.navbar.sticky-top.navbar-expand.navbar-dark.bg-dark
      a(href="/", aria-label="Accenture Homepage").navbar-brand.mr-0.mr-md2
        img(src="http://" + hostDomain + "/images/navbar/acnapi_logo.png", width="80", height="30" style=" padding: 0px 00px 0px 0px")
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a#btn_tickets.nav-link(href="/tickets" data-toggle="tooltip" data-placement="bottom" title="Your Tickets" text="Tickets") Tickets              
              img(src='/images/navbar/bookwhite.png', width="20", height="20")             
            
              
          li.nav-item
            a#btn_ticket-form.nav-link(href="/ticket_form/basics" data-toggle="tooltip" data-placement="bottom" title="Questions") Questions
              img(src='/images/navbar/helpwhite.png', width="20", height="20")
          li.nav-item
            a#btn_chat.nav-link(href='/room' target="_blank" ata-toggle="tooltip" data-placement="bottom" title="Chat with Admin now!") Admin Chat
              img(src='/images/navbar/chatwhite.png', width="20", height="20")
          li.nav-item
            a#btn_consultant.nav-link(href='/consultant' data-toggle="tooltip" data-placement="bottom" title="Meet The Consultants") Meet The Consultants
              img(src='/images/navbar/consultantwhite.png', width="20", height="20")
      
      .navbar-right
        if user
          if user.is_admin
            ul.navbar-nav.mr-auto
              span#user_logged.navbar-text Hello #{user.firstName} (ADMIN)!
              li.nav-item
                a#btn_logout.nav-link(href="/users/logout") Logout
          else
            ul.navbar-nav.mr-auto
              span#user_logged.navbar-text Hello #{user.firstName}!
              li.nav-item
                a#btn_logout.nav-link(href="/users/logout") Logout
        else
          .navbar-right
            ul.navbar-nav.mr-auto
              li.nav-item
                a#btn_signup.nav-link(href="/users/signup") Sign up
              li.nav-item
                a#btn_login.nav-link(href="/users/login") Login