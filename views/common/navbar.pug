
mixin navbar(user)
		nav.navbar.sticky-top.navbar-expand-lg.navbar-dark.bg-dark
			a(href="/", aria-label="Accenture Homepage").navbar-brand.mr-0.mr-md2
				img(src="/images/accenture.png", width="30", height="30")
			
			.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					li.nav-item.active
						a.nav-link(href="/" data-toggle="tooltip" data-placement="bottom" title="Home") 
							img(src='../images/homewhite.png', width="30", heigh="30")
							
					li.nav-item
						a.nav-link(href="/tickets" data-toggle="tooltip" data-placement="bottom" title="Tickets")   
							img(src='../images/ticketswhite.png', width="30", heigh="30")

					li.nav-item
						a.nav-link(href="/ticket/form" data-toggle="tooltip" data-placement="bottom" title="Ask questions" )   
							img(src='../images/questionswhite.png', width="30", heigh="30")
			.navbar-right
				if user
					.navbar-right
					ul.navbar-nav.mr-auto
						span.navbar-text Hello #{user.firstName}!
						li.nav-item
							a.nav-link(href="/users/logout") Logout
				else
					.navbar-right
						ul.navbar-nav.mr-auto
							li.nav-item
								a.nav-link(href="/users/signup") Sign up
							li.nav-item
								a.nav-link(href="/users/login") Login
					
