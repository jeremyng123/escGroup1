doctype html
html(lang='en')
  include ../common/header.pug
  +header("Tickets")
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 tickets
            table.table
              thread
              tr
                th(scope="col") Name
                th(scope="col") Email
                th(scope="col") Phone Number
                th(scope="col") Actions
                th(scope="col")
              tr
              tbody
              for ticket in tickets
                tr(id=ticket.id)
                td
                  span #{ticket.firstName + " " + ticket.lastName}
                td
                  span #{ticket.email}
                td
                  span #{ticket.phoneNumber}
                td
                  a(href="/ticket/" + ticket.id) Details
                td
                  button(onclick=`deleteticket('${ticket.id}')`).btn.btn-primary Delete


    include ../common/footer.pug
    +footer()
    script(src="/javascripts/tickets.js")
